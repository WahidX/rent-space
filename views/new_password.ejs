<link rel="stylesheet" href="/css/form_style.css">

<div class="background">
    <div class="form-container">
        <form action="/user/update_password" method="POST">
        
            <label for="new_password">New Password</label>
            <input type="password" class="form-control" id="new_password" name="new_password" placeholder="Enter password" required>
            
            <label for="confirm_password">Confirm Password</label>
            <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Enter password again" required>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>
</div>